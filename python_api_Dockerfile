FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY python_api_requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r python_api_requirements.txt

# Copy application code
COPY python_api.py .
COPY gemini_client.py .
COPY tts_synthesizer_admin_controlled.py .
COPY *.py ./

# Create directories for uploads and outputs
RUN mkdir -p uploads tts_output

# Expose port
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD python -c "import requests; requests.get('http://localhost:5000/health')" || exit 1

# Start the application with Gunicorn
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "--workers", "1", "--timeout", "300", "python_api:app"] 